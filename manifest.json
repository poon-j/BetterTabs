{
	"name": "Better Tabs",
	"version": "1.0.0",
	"description": "Organize your browser tabs better.",
	"manifest_version": 2,

	"background": {
		"persistent": false,
		"scripts": ["js/bettertabs.js", "js/background_script.js"]
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"permissions": ["tabs", "storage"],
	"icons": {
		"48": "images/icon_48.png",
		"96": "images/icon_96.png"
	},
	"browser_action": {
		"default_icon": "images/icon_96.png",
		"default_popup": "popup.html"
	}
}

